<div class="col-lg-12">
    <div class="hpanel" id="divCheckCollapsed">
        <div class="panel-heading hbuilt">
            <div class="pull-right" id="DivDistrictSite">
                @{
                    string sort_type = @Model.Sites[0].SiteCode;
                    if (sort_type == "0001")
                        sort_type = "";
                    else
                        sort_type = "text-success";
                }

                <a class="@sort_type" style="margin-right:  5px; margin-top: 10px;" onclick="ChooseViewSitesSort('DivMainTables', 1, this.id);" title="Orden Alfabético" data-toggle="tooltip" data-placement="right"><i class="fa fa-sort-alpha-asc"></i></a>
                @{
                    string sort_type_2 = @Model.Sites[0].SiteCode;
                    if (sort_type_2 == "0001")
                        sort_type_2 = "text-success";
                    else
                        sort_type_2 = "";
                }
                <a class="@sort_type_2" style="margin-right: 15px; margin-top: 10px;" onclick="ChooseViewSitesSort('DivMainTables', 2, this.id);" title="Orden por Aperturas" data-toggle="tooltip" data-placement="right"><i class="fa fa-sort-amount-asc"></i></a>
                @foreach (var item in @Model.Districts)
                {
                    <a class="btn btn-default btn-xs" id="@item.Trim()" onclick="CheckSitesDistrict(this.id);">@item.Trim()</a>
                }
                <a class="showhide">  <i class="fa fa-chevron-up"></i></a>
            </div>
            <i class="fa fa-shopping-cart"></i> SELECCCIONAR TIENDAS
        </div>
        <div class="panel-body">
            <div class="RowCheck row" id="CheckBoxesSites">
                <div class="col-lg-6 border-right">
                    <ul id="CheckStores1">
                        <li id="label_All">
                            <input type="checkbox" id="All" name="All" class="i-checks" onclick="CheckSitesAll()"><label style="font-size: 12px; font-weight: normal;"> TODAS LAS TIENDAS </label>
                        </li>
                        @{
                            int tab_index_input = 1;
                        }
                        @for (int countCheckSites = 0; countCheckSites < Model.ListPosition.first_column_for_column_2_with_inputs; countCheckSites++)
                        {
                            <li id="label_@Model.Sites[countCheckSites].SiteCode.Trim()" style="width:100%;margin-top:20px">
                                <input type="checkbox" id="@Model.Sites[countCheckSites].SiteCode.Trim()" name="@Model.Sites[countCheckSites].District" class="i-checks" onclick="ValidateSitesCurrentDisable(this.id);CheckValidateAll();">
                                <label id="label_txt_@Model.Sites[countCheckSites].SiteCode.Trim()" style="font-weight: normal; width: 90%; display: inline;">
                                    @Model.Sites[countCheckSites].SiteName.Trim()
                                    <input type="text" id="input_amount_nod_@Model.Sites[countCheckSites].SiteCode.Trim()"  pattern="^(-?\$)\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency" onchange="CalculateTotalNoDeduAmount(this.id)" placeholder="Monto NO DEDUCIBLE" class="form-control pull-right Decimal" autocomplete="off" disabled style="width: 30%;">
                                    <label id="label_txt_inside_@Model.Sites[countCheckSites].SiteCode.Trim()" style="font-weight: normal; width: 30%;" class="pull-right">
                                        <input type="text" tabindex="@tab_index_input" id="input_amount_@Model.Sites[countCheckSites].SiteCode.Trim()"  pattern="^(-?\$)\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency" onchange="CalculateTotalNoDeduAmount(this.id)" placeholder="Monto @Model.Sites[countCheckSites].SiteName.Trim()" class="form-control Decimal" autocomplete="off" disabled>
                                    </label>
                                </label>
                            </li>
                            tab_index_input++;
                        }
                    </ul>
                </div>
                <div class="col-lg-6 border-right">
                    <ul id="CheckStores2">
                        @for (int countCheckSites = Model.ListPosition.first_column_for_column_2_with_inputs; countCheckSites < Model.ListPosition.all_sites_actives; countCheckSites++)
                        {
                            <li id="label_@Model.Sites[countCheckSites].SiteCode.Trim()" style="width:100%;margin-top:20px">
                                <input type="checkbox" id="@Model.Sites[countCheckSites].SiteCode.Trim()" name="@Model.Sites[countCheckSites].District" class="i-checks" onclick="ValidateSitesCurrentDisable(this.id);CheckValidateAll();">
                                <label id="label_txt_@Model.Sites[countCheckSites].SiteCode.Trim()" style="font-weight: normal; width: 90%; display: inline;">
                                    @Model.Sites[countCheckSites].SiteName.Trim()
                                    <input type="text" id="input_amount_nod_@Model.Sites[countCheckSites].SiteCode.Trim()" pattern="^(-?\$)\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency" onchange="CalculateTotalNoDeduAmount(this.id)" placeholder="Monto NO DEDUCIBLE" class="form-control pull-right Decimal" autocomplete="off" disabled style="width: 30%;">
                                    <label id="label_txt_inside_@Model.Sites[countCheckSites].SiteCode.Trim()" style="font-weight: normal; width: 30%;" class="pull-right">
                                        <input type="text" tabindex="@tab_index_input"  id="input_amount_@Model.Sites[countCheckSites].SiteCode.Trim()"  pattern="^(-?\$)\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency" onchange="CalculateTotalNoDeduAmount(this.id)" placeholder="Monto @Model.Sites[countCheckSites].SiteName.Trim()" class="form-control Decimal" autocomplete="off" disabled>
                                    </label>
                                </label>
                            </li>
                            tab_index_input++;
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="panel-footer clearfix">
            <p class="pull-left" id="count_all_sites_text" style="margin-top:15px;">Se han seleccionado 0 sucursales.</p>
            <p class="pull-right" id="amount_all_sites_text">El monto total es <span class="text-success">$0.00</span> .</p>
            <br />
            <br />
            <p class="pull-right" id="amount_all_sites_text_no_dedu">El monto total es <span class="text-success">$0.00</span> .</p>
        </div>
    </div>
</div>
@Html.Hidden("count_div_panel_checkbox", 0)
@Html.Hidden("div_panel_inputs", 1)
@Html.Hidden("div_panel_percentage", 0)