    <link rel="stylesheet" href="~/fonts/pe-icon-7-stroke/css/pe-icon-7-stroke.css" />
    <link rel="stylesheet" href="~/fonts/pe-icon-7-stroke/css/helper.css" />
    <link rel="stylesheet" href="~/styles/style.css">
    <link rel="stylesheet" href="~/styles/static_custom.css">
</head>
<body class="blank tooltip-demo">

    <!-- Simple splash screen-->
    <div class="splash"> <div class="color-line"></div><div class="splash-title"><h1>Espere Por Favor..</h1><p>Su petición se está procesando. </p><div class="spinner"> <div class="rect1"></div> <div class="rect2"></div> <div class="rect3"></div> <div class="rect4"></div> <div class="rect5"></div> </div> </div> </div>
    @if (Request.Browser.Browser.ToUpper().Contains("INTERNETEXPLORER"))
    {<p class="alert alert-danger">Usted está usando un navegador <strong>EXPLORER</strong>.  Le sugerimos utilizar cualquiera de los siguientes navegadores <strong>(Chrome,Opera)</strong>.</p>}
    <div class="back-link">
        <h1>
            <img src="~/Content/img/logo florido azul.png" height="80" width="100" onclick="ClickLoadAllSites()">
        </h1>
    </div>
    <div class="color-line"></div>
    <div class="login-container  animate-panel">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center m-b-md">
                    <h3 class="font-extra-bold">Florido Administración POS</h3>
                    <small class="font-extra-bold">Sistema Administración</small>
                </div>
                <div class="hpanel">
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { name = "LoginForm", id = "LoginForm" }))
                        {
                            <div class="form-group" title="Favor de introducir su usuario/email" data-toggle="tooltip" data-placement="left">
                                <label class="control-label" for="username">Usuario</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-user"></span>
                                    </span>
                                    @Html.TextBoxFor((x => x.Username), new { @class = "form-control", @placeholder = "ejemplo@elflorido.com.mx", @required = "" })
                                </div>
                                <span class="help-block small">Tu usuario para el sistema</span>
                            </div>
                            <div class="form-group" title="Favor de introducir su contraseña" data-placement="left" data-toggle="tooltip">
                                <label class="control-label" for="password">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-key"></span>
                                    </span>
                                    @Html.PasswordFor((x => x.Password), new { @class = "form-control", @placeholder = "*********", @required = "" })
                                </div>
                                <span class="help-block small">Tu contraseña</span>
                            </div>
                            <br />
                            @*<div>
                                <ol class="hbreadcrumb breadcrumb">
                                    <li id="PassWordLi">
                                        <a href="~/home/RecoveryPassword" data-toggle="tooltip" data-placement="left" title="Click para recuperar su contraseña">•(Olvidé mi contraseña)</a>
                                    </li>
                                    <li id="BlockLi" class="">
                                        <a href="~/home/Unlocking" data-toggle="tooltip" data-placement="top" title="Click para desbloqueo de usuarios">•(Desbloquear mi cuenta)</a>
                                    </li>
                                    <li id="B" class="">
                                        <a href="https://elflorido.atlassian.net/servicedesk/customer/portal/6" data-toggle="tooltip" data-placement="top" title="Mesa de Ayuda Florido">Soporte</a>
                                    </li>
                                    <li id="C" class="">
                                        <a href="https://elflorido.atlassian.net/servicedesk/customer/portal/7" data-toggle="tooltip" data-placement="top" title="Mesa de Ayuda Mantenimiento">Mantenimiento</a>
                                    </li>
                                </ol>
                            </div>*@
                            <button class="btn btn-success btn-block"><i class="fa fa-check"></i>  Iniciar</button>
                            <a class="btn btn-default btn-block" href="~/Home/Register"><i class="fa fa-user-plus"></i>  Registrarse</a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="form-group" title="@ViewBag.MyPathInServer" data-placement="top" data-toggle="tooltip">
                    <strong>Florido Administración POS </strong>2025 - @DateTime.Now.Year &copy; Distribuidora el Florido S.A. de C.V.
                </div>
            </div>
        </div>
    </div>
    <script src="~/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/vendor/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/vendor/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="~/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/vendor/metisMenu/dist/metisMenu.min.js"></script>
    <script src="~/vendor/iCheck/icheck.min.js"></script>
    <script src="~/vendor/sparkline/index.js"></script>
    <script src="~/vendor/toastr/build/toastr.min.js"></script>
    <script src="~/vendor/jquery-validation/jquery.validate.min.js"></script>
    <!-- App scripts -->
    <script src="~/Scripts/homer.js"></script>
    @Scripts.Render("~/bundles/Login/js")

    <div class="modal fade" id="PVMainModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-full">
            <div class="modal-content">
                <div class="color-line"></div>
                <div class="modal-header text-center">
                    <h4 class="modal-title" id="PVTitleMainModal"><i class="fa fa-newspaper-o"></i> Sucursales</h4>
                    <div class="hide" id="PVTitleMainModalDetail"><div class="text-left" style="font-size: 18px;"><img src="~/Content/img/logo florido azul.png" height="120" width="140"></div><div class="text-right" style="font-size: 18px;"><a href="http://10.20.10.37/BIDFL/" target="_blank"> • <i class="fa fa-group"></i> BIDFL </a><a href="http://10.11.0.10:30/" target="_blank"> • <i class="fa fa-dropbox"></i> W M S </a><a href="http://10.11.0.11:30/" target="_blank"> • <i class="fa fa-pagelines"></i> Mariscal </a> • <a href="http://10.11.0.10:40/" target="_blank"><i class="fa fa-credit-card-alt"></i> CochiCard </a> • <a href="http://10.11.0.26:40/" target="_blank"><i class="fa fa-stethoscope"></i> FloriFarmacias </a>  • <a href="http://10.10.32.57:26/" target="_blank"><i class="fa fa-medkit"></i> Labs Florido </a> <a href="https://elflorido.atlassian.net/servicedesk/customer/portal/6" target="_blank"> • <i class="fa fa-life-saver"></i> Mesa de Ayuda Florido  </a> <a href="https://elflorido.atlassian.net/servicedesk/customer/portal/7" target="_blank">  • <i class="fa fa-laptop"></i> Mesa de Ayuda Mantenimiento  </a></div></div>
                </div>
                <div class="modal-body">
                    <div id="PVContainerMainModal">
                    </div>
                </div>
                <div class="modal-footer">
                    <div id="PVFooterMainModal">
                        <button type="button" id="PVbtnCloseMainModal" class="btn btn-default pull-left" data-dismiss="modal"><i class="fa fa-close"></i> Cerrar</button>
                        <button type="button" id="PVbtnSaveProcess" class="btn btn-success"><i class="fa fa-check"></i> Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>